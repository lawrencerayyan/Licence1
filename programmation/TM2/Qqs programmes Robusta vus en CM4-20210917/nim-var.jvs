            coup = readInt("Valeur du coup (merci dâ€™entrer une valeur correcte) ?");
        }
        all = all - coup;
        print("Coup joue : ");
        println(coup);
        // joueur = 3-joueur;
        if (joueur == 1) {
            joueur = 2;
        } else {
            joueur = 1;
        }
    }
